# Environment Variables Template for Production Deployment
# Copy this file to .env and fill in the values
# NEVER commit .env files with real values to git

# ===========================
# Application Configuration
# ===========================

# Node environment
NODE_ENV=production

# Server port (Railway auto-assigns this, don't set manually)
# PORT=3000

# ===========================
# Database Configuration
# ===========================

# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
DATABASE_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE?retryWrites=true&w=majority

# MongoDB database name
DB_NAME=discord-trade-exec

# ===========================
# Redis Configuration
# ===========================

# Redis connection URL (Railway provides this automatically)
# Format: redis://default:password@host:port
# REDIS_URL=redis://default:YOUR_PASSWORD@YOUR_HOST.railway.app:6379

# Redis configuration (optional, has sensible defaults)
# REDIS_MAX_MEMORY=1gb
# REDIS_EVICTION_POLICY=allkeys-lru

# ===========================
# Session Configuration
# ===========================

# Session secret (MUST be strong random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=GENERATE_STRONG_RANDOM_SECRET_HERE

# Session collection name in MongoDB
SESSION_COLLECTION_NAME=sessions

# Session cookie settings
SESSION_COOKIE_MAX_AGE=2592000000
# SESSION_COOKIE_SECURE=true (automatically set in production)
# SESSION_COOKIE_HTTP_ONLY=true (automatically set)

# ===========================
# Authentication Configuration
# ===========================

# Discord OAuth2 credentials
DISCORD_CLIENT_ID=YOUR_DISCORD_CLIENT_ID
DISCORD_CLIENT_SECRET=YOUR_DISCORD_CLIENT_SECRET
DISCORD_CALLBACK_URL=https://your-app.railway.app/auth/discord/callback

# ===========================
# WebSocket Configuration
# ===========================

# WebSocket CORS origins (comma-separated)
WS_CORS_ORIGIN=https://your-frontend.com,https://your-app.railway.app

# WebSocket rate limiting (requests per time window)
WS_RATE_LIMIT_GLOBAL=1000
# WS_RATE_LIMIT_WINDOW=60000
# WS_RATE_LIMIT_SUBSCRIBE=100
# WS_RATE_LIMIT_UNSUBSCRIBE=100

# WebSocket connection limits
# WS_MAX_CONNECTIONS_PER_USER=5
# WS_CONNECTION_TIMEOUT=30000

# ===========================
# Broker API Configuration
# ===========================

# Alpaca API
ALPACA_API_KEY=YOUR_ALPACA_API_KEY
ALPACA_API_SECRET=YOUR_ALPACA_API_SECRET
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# TD Ameritrade API
TD_AMERITRADE_API_KEY=YOUR_TD_API_KEY
TD_AMERITRADE_REDIRECT_URI=https://your-app.railway.app/auth/tdameritrade/callback

# Interactive Brokers
IB_HOST=localhost
IB_PORT=4001
IB_CLIENT_ID=0

# TradeStation API
TRADESTATION_API_KEY=YOUR_TRADESTATION_API_KEY
TRADESTATION_API_SECRET=YOUR_TRADESTATION_API_SECRET
TRADESTATION_REDIRECT_URI=https://your-app.railway.app/auth/tradestation/callback

# Robinhood (use at your own risk, unofficial API)
# ROBINHOOD_USERNAME=YOUR_ROBINHOOD_USERNAME
# ROBINHOOD_PASSWORD=YOUR_ROBINHOOD_PASSWORD

# ===========================
# Crypto Exchange Configuration
# ===========================

# Coinbase Pro API
COINBASE_PRO_API_KEY=YOUR_COINBASE_API_KEY
COINBASE_PRO_API_SECRET=YOUR_COINBASE_API_SECRET
COINBASE_PRO_PASSPHRASE=YOUR_COINBASE_PASSPHRASE

# Kraken API
KRAKEN_API_KEY=YOUR_KRAKEN_API_KEY
KRAKEN_API_SECRET=YOUR_KRAKEN_API_SECRET

# ===========================
# Payment Processing
# ===========================

# Stripe API
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET

# ===========================
# Monitoring & Logging
# ===========================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Insights (optional)
# APPINSIGHTS_INSTRUMENTATIONKEY=YOUR_INSTRUMENTATION_KEY

# ===========================
# Security Configuration
# ===========================

# CORS allowed origins (comma-separated)
CORS_ORIGIN=https://your-frontend.com,https://your-app.railway.app

# JWT secret for API tokens (if using JWT)
# JWT_SECRET=GENERATE_STRONG_RANDOM_SECRET_HERE
# JWT_EXPIRES_IN=7d

# Encryption key for sensitive data
# ENCRYPTION_KEY=GENERATE_32_BYTE_HEX_STRING_HERE

# ===========================
# Feature Flags
# ===========================

# Enable/disable features
ENABLE_CRYPTO_TRADING=true
ENABLE_OPTIONS_TRADING=false
ENABLE_FUTURES_TRADING=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# ===========================
# Rate Limiting (API)
# ===========================

# API rate limits
API_RATE_LIMIT_WINDOW=900000
# API_RATE_LIMIT_MAX=100

# ===========================
# Email Configuration (optional)
# ===========================

# SendGrid API
# SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
# EMAIL_FROM=noreply@your-domain.com

# ===========================
# AWS Configuration (optional)
# ===========================

# AWS credentials for S3, SQS, etc.
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# AWS_REGION=us-east-1

# ===========================
# Testing Configuration
# ===========================

# Test environment overrides (DO NOT set in production)
# USE_TEST_DATABASE=false
# MOCK_BROKERS=false
