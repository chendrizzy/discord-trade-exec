{
  "all": true,
  "include": ["src/**/*.js"],
  "exclude": [
    "src/index.js",
    "src/dashboard/**",
    "**/node_modules/**",
    "tests/**",
    "**/*.test.js",
    "**/*.spec.js",
    "coverage/**",
    "dist/**"
  ],
  "reporter": ["text", "text-summary", "lcov", "html"],
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80,
  "check-coverage": true,
  "per-file": true,
  "temp-directory": ".nyc_output",
  "report-dir": "coverage"
}
