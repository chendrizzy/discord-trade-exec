{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-console": "error",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "prefer-const": "warn",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["src/dashboard/**/*.js", "src/dashboard/**/*.jsx"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["tests/**/*.js", "**/*.test.js", "**/*.spec.js"],
      "rules": {
        "no-console": "warn"
      }
    }
  ]
}
